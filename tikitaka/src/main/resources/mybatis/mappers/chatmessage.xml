<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chatmessage">
	<insert id="insert" parameterType="chatmessage">
		<![CDATA[
			insert into chat_message 
			values(#{userNo},#{chatNo},null,#{type},#{contents},#{readCount},now());
		]]>
	</insert>
	
	<select id="findByChatNo" parameterType="chatmessage" resultType="map">
		<![CDATA[
			select no, user_no, reg_time, read_count, type, contents from tikitaka.chat_message 
			where chat_no = 668
		]]>
	</select>
	
</mapper>
