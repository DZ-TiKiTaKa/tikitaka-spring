<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chatmessage">
	<insert id="insert" parameterType="chatmessage">
		<![CDATA[
			insert into chat_message 
			values(#{userNo},#{chatNo},null,#{type},#{contents},#{readCount},now());
		]]>
	</insert>
	
	<insert id="sendImage" parameterType="chatmessage">
		<![CDATA[
			insert into chat_message 
			values(#{userNo},#{chatNo},null,#{type},#{contents},#{readCount},now());
		]]>
	</insert>
	
	<select id="findByChatList" parameterType="chatmessage" resultType="chatmessage">
		<![CDATA[
			select * 
			from chat_message
			where chat_no = #{chatNo}
		]]>
	</select>
	
</mapper>
